<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "barbackground_edxzcz", height: 400, width: 400, crop: :fill %>');">
  <div class="container">
    <h1>KEEP CALM AND MAKE A COCKTAIL.</h1>
    <p>By Mister Cocktail</p>
  </div>
</div>


<div class="container mx-auto">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail.id), class:"text-decoration-none text-white" %></h2>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "cocktail_pepp7q", height: 300, width: 400, crop: :fill %>')">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail.id), class:"text-decoration-none text-white" %></h2>
        </div>
      <% end %>
    <% end %>
  </div>
  <br>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-ghost" %>
</div>
